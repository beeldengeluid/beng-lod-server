@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .
@prefix dcam: <http://purl.org/dc/dcam/> .
@prefix dcterms: <http://purl.org/dc/terms/> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix bg: <http://lod.beeldengeluid.nl/catalogue/>

<http://lod.beeldengeluid.nl/catalogue/>
    dcterms:publisher <http://lod.beeldengeluid.nl/catalogue/publisher> ;
    dcterms:title "Netherlands Institute for Sound and Vision Catalogue Metadata model"@en ;
    dcterms:title "Nederlands Instituut voor Beeld en Geluid Catalogus Metadata model"@nl ;
    dcterms:description "Metadata model written in RDFS/OWL for items from the Sound and Vision Audiovisual Archive catalogue."@nl ;
    dcterms:description "Metadata model geschreven in RDFS/OWL voor items uit de catalogus van het Beeld en Geluid audiovisuele archief."@nl .

bg:bgelement
	a rdfs:Class ;
	dc:identifier xsd:string; 
	dc:relation xsd:string; 
	dcterms:isPartOf xsd:anyUri ; 
	bg:external-id xsd:string ;
	bg:maintitles bg:MaintitlesType ;
	bg:subtitles bg:subtitlesType ;
	bg:creators bg:creatorsType ;
	bg:originalCreators bg:originalCreatorsType ;
	bg:casts bg:castsType ;
	bg:speakers bg:speakersType ;
	bg:executives bg:executivesType ;
	bg:producers bg:producersType ;

	bg:aggregationType xsd:string ;
	bg:id xsd:integer .

bg:external-id
	a rdf:Property ;
	rdfs:label "Een externe ID afkomstig vanuit een ander ID systeem."@nl ;
	rdfs:comment "This kind of ID originates from another identifier system."@en ;
    rdfs:range xsd:string .

bg:maintitles
	a rdf:Property ;
    rdfs:range bg:maintitlesType ;
	rdfs:comment "Conceptuele(hoofd)titel van een programma, serie, seizoen of segment."@nl ;
	rdfs:label ""@en ;
	skos:note "Hoofdtitel van een season, series, program of segment in het metadata model."@nl .

bg:MaintitlesType
	a rdfs:Class ;
	bg:title bg:titleType ;
	rdfs:label ""@nl .

bg:title
	a rdf:Property ;
	rdfs:range bg:titleType ;
	rdfs:label "Titel"@nl .

bg:type
	a rdf:Property ;
	rdfs:label "Type"@nl ;
	rdfs:comment "Attribuut van bg:title waarin het soort titel wordt aangegeven. Voorbeeld: 'gegeven titel'."@nl ;
	rdfs:range xsd:string .

bg:titleType
	a rdfs:Class ;
	rdfs:label "Titel"@nl ;
	rdfs:label "Title"@en ;
	rdfs:range xsd:string ;
	dcterms:language rdfs:Literal ;
	dcterms:contributor rdfs:Literal ;
	bg:type xsd:string ;
	skos:note "Titel waarvan de precieze definitie afhankelijk is van het niveau in het metadata model."@nl .

bg:subtitles
	a rdf:Property ;
	rdfs:range bg:subtitlesType ;
	rdfs:label ""@ nl .

bg:subtitlesType
	a rdfs:Class ;
	bg:title bg:titleType ;
	rdfs:label ""@nl .

bg:creators
	a rdf:Property ;
	rdfs:range bg:creatorsType ;
	rdfs:label ""@nl .

bg:creatorsType
	a rdfs:Class ;
	bg:creator bg:creatorType ;
	rdfs:label ""@nl .

bg:originalCreators
	a rdf:Property ;
	rdfs:range bg:originalCreatorsType ;
	rdfs:label ""@nl .

bg:originalCreatorsType
	a rdfs:Class ;
	bg:creator bg:creatorType ;
	rdfs:label ""@nl .

bg:creator
	a rdf:Property ;
	rdfs:range bg:creatorType ;
	rdfs:label "Maker"@nl .

bg:creatorType
	a rdfs:Class ;
	bg:name xsd:string ;
	bg:clarification xsd:string ;
	bg:roles bg:roleType ;
	rdfs:label ""@nl .

bg:name
	a rdf:Property ;
	rdfs:range xsd:string ;
	rdfs:label "Naam (van een persoon)."@nl .

bg:clarification
	a rdf:Property ;
	rdfs:range xsd:string ;
	rdfs:label "Toelichting"@nl .

bg:roles
	a rdf:Property ;
	rdfs:range bg:rolesType ;
	rdfs:label ""@nl ;
	rdfs:comment "Rollen/functies zijn bijv.: 'regie', 'productie' en 'presentatie'."@nl .

bg:rolesType
	a rdfs:Class ;
	bg:role xsd:string ;
	rdfs:label ""@nl .

bg:role
	a rdf:Property ;
	rdfs:range xsd:string ;
	rdfs:label "Rol/functie"@nl .

bg:casts
	a rdf:Property ;
	rdfs:range bg:castsType ;
	rdfs:comment "Casts in een productie."@nl .

bg:castsType
	a rdfs:Class ;
	bg:cast bg:castType ;
	rdfs:label ""@nl .

bg:cast
	a rdf:Property ;
	rdfs:range bg:castType ;
	rdfs:label "Cast"@nl .
	rdfs:comment "Acteurs/actrices en karakters die ze spelen."@nl .

bg:castType
	a rdfs:Class ;
	bg:name xsd:string ;
	bg:character xsd:string ;
	bg:clarification xsd:string ;
	rdfs:label ""@nl .

bg:character
	a rdf:Property ;
	rdfs:range xsd:string ;
	rdfs:label "Karakter"@nl ;
	rdfs:comment "Karakter in een productie gespeeld door een acteur/actrice."@nl .

bg:speakers
	a rdf:Property ;
	rdfs:range bg:speakersType ;
	rdfs:label "Spreker"@nl ;
	rdfs:comment "Namen van gastspreker(s)."@nl .

bg:speakersType
	a rdfs:Class ;
	bg:speaker bg:speakerType ;
	rdfs:label ""@nl .

bg:speakerType
	a rdfs:Class ;
	bg:name xsd:string ;
	bg:role xsd:string ;
	rdfs:label "Spreker"@nl ;
	rdfs:comment "Naam van gastspreker(s)."@nl .

bg:executives
	a rdf:Property ;
	rdfs:range bg:executivesType ;
	rdfs:label "Artiesten of groep"@nl ;
	rdfs:comment "Namen (en rol) van artiesten of groep die optreedt."@nl .

bg:executivesType
	a rdfs:Class ;
	bg:name xsd:string ;
	bg:role xsd:string ;
	bg:clarification xsd:string ;
	rdfs:label "Artiest of groep"@nl ;
	rdfs:comment "Naam (en rol) van artiest of groep die optreedt."@nl .

bg:producers
	a rdf:Property ;
	rdfs:range bg:producersType ;
	rdfs:label "Producenten"@nl ;
	rdfs:comment "Namen van producenten."@nl .

bg:producersType
	a rdfs:Class ;
	bg:name xsd:string ;
	rdfs:label "Producent"@nl ;
	rdfs:comment "Naam van producent."@nl .


bg:aggregationType
	a rdfs:Class ;
	rdfs:label "Hierarchisch niveau in het metadata model"@nl ;
	rdfs:label "Hierarchical Level in the metadata model"@en ;
	rdfs:comment "Een class waarvan de waarde uitdrukt welk aggregatieniveau uit het iMMix metadata model."@nl ;
	rdfs:comment "A class that expresses the hierarchical level in the metadata model."@nl ;
    rdfs:range xsd:string .

bg:id
	a rdf:Property ;
	rdfs:range xsd:integer .
