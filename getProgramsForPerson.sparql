#+ summary: Query to get the title and ID of all programs associated with a person (at present only via creator relations)
#+ endpoint: http://zorin.beeldengeluid.nl:3020/sparql/
PREFIX nisv: <http://data.rdlabs.beeldengeluid.nl/schema/>
PREFIX skos: <http://www.w3.org/2004/02/skos/core#>
PREFIX rdfs: <http://www.w3.org/2000/01/rdf-schema#>

SELECT DISTINCT ?programId ?title
WHERE {
?programId a nisv:Program . OPTIONAL {?programId nisv:hasMainTitle ?titleObject . ?titleObject nisv:titleValue ?title .} ?programId ?personProperty ?personInRoleId . ?personInRoleId ?personProperty ?personId . ?personId skos:prefLabel "Verhoeven, Paul"@nl . ?personProperty rdfs:subPropertyOf nisv:hasEntityInRole
}

